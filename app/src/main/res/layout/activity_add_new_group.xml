
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
        android:background="@mipmap/bg_light">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.eventshare.eventshare.Activities.AddNewGroupActivity"
        android:nestedScrollingEnabled="true"
        android:focusable="true" android:focusableInTouchMode="true"
        >

            <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/add_photo"
            android:id="@+id/ivAddPhoto"
            android:layout_alignParentStart="true"
                android:alpha="0.7"
                android:src="@drawable/e_icon_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Photo"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:id="@+id/textView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Event description"
            android:id="@+id/etGroupName"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:maxLength="30"
            android:maxLines="1"
            android:autoText="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Choose date"
            android:id="@+id/event_date"
            android:layout_marginTop="300dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:inputType="date"
            android:focusable="false"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="Choose Location"
                android:id="@+id/tvGroupLocation"
                android:gravity="center_horizontal"
                android:layout_marginTop="240dp"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:focusable="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="Enter some keywords"
                android:id="@+id/event_keywords"
                android:layout_marginTop="180dp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:maxLength="25"
                android:autoText="false" />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/isVisible"
                android:layout_marginTop="355dp"
                android:layout_toEndOf="@+id/textView3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visible to outsiders?"
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="360dp"
                android:focusable="false" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="Choose time"
                android:id="@+id/event_time"
                android:gravity="center_horizontal"
                android:layout_alignEnd="@+id/isVisible"
                android:layout_marginTop="300dp"
                android:inputType="time"
                android:focusable="false"/>


        </RelativeLayout>


    </LinearLayout>

</ScrollView>
