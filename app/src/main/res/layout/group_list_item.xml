<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    android:weightSum="1">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:id="@+id/ivSingleGroupPic"
        />

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/group_last_message"
        android:textSize="8pt"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_below="@+id/group_name"
        android:layout_toEndOf="@+id/ivSingleGroupPic"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_last_message_time"
        android:layout_above="@+id/group_last_message"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/group_name"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="false"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/group_name"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:textSize="10pt"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/ivSingleGroupPic" />

</RelativeLayout>